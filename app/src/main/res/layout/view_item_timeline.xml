<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <com.vipul.hp_hp.timelineview.TimelineView
        android:id="@+id/time_marker"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:markerInCenter="false"
        app:marker="@mipmap/img1"
        app:line="#666666"
        app:line_size="2dp"
        app:marker_size="50dp" />

   <LinearLayout
       android:padding="5dp"
       android:orientation="vertical"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <TextView
           android:textSize="14sp"
           android:layout_marginTop="5dp"
           android:layout_marginBottom="5dp"
           android:id="@+id/tv_option"
            android:text="122627018评论了文章"
           android:layout_width="match_parent"
           android:layout_height="wrap_content" />

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="200dp">
           <ImageView
               android:scaleType="fitXY"
               android:src="@mipmap/demo"
               android:layout_width="match_parent"
               android:layout_height="match_parent" />
           <TextView
               android:padding="5dp"
               android:layout_alignParentBottom="true"
               android:background="#50000000"
               android:textColor="#ffffff"
               android:textSize="16sp"
               android:text="听说今天这里发生了火灾..."
               android:layout_width="match_parent"
               android:layout_height="wrap_content" />
       </RelativeLayout>

       <RelativeLayout
           android:id="@+id/rl_foot"
           android:paddingTop="10dp"

           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <TextView

               android:textColor="#666666"
               android:textSize="12sp"
               android:layout_alignParentLeft="true"
               android:id="@+id/info_locat_tag"
               android:text="科技馆s"
               android:layout_width="wrap_content"
               android:layout_height="match_parent" />
           <TextView
               android:id="@+id/info_star"
               android:textColor="#666666"
               android:textSize="12sp"
               android:layout_alignParentRight="true"
               android:text="0 赞"
               android:layout_width="wrap_content"
               android:layout_height="match_parent" />
           <View
               android:layout_marginTop="35dp"
               android:layout_marginBottom="10dp"
               android:layout_alignParentBottom="true"
               android:background="#50666666"
               android:layout_width="match_parent"
               android:layout_height="1dp"/>
       </RelativeLayout>

   </LinearLayout>

</LinearLayout>